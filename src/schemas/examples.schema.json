{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://awesome-devsecops.example.com/schemas/examples.schema.json",
  "title": "DevSecOps Code Examples Schema",
  "description": "Schema for validating DevSecOps code examples and templates",
  "type": "object",
  "required": ["$schema", "version", "last_updated", "examples"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Reference to this schema file"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of the data file"
    },
    "last_updated": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last update"
    },
    "examples": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title", "description", "category", "language", "code", "usage", "tags", "difficulty", "last_updated"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$",
            "description": "Unique example identifier"
          },
          "title": {
            "type": "string",
            "minLength": 1,
            "maxLength": 150,
            "description": "Example title"
          },
          "description": {
            "type": "string",
            "minLength": 10,
            "maxLength": 500,
            "description": "Brief description of what the example demonstrates"
          },
          "category": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$",
            "description": "Example category (e.g., github-actions, docker, kubernetes)"
          },
          "language": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9+#-]+$",
            "description": "Programming/configuration language"
          },
          "code": {
            "type": "string",
            "minLength": 10,
            "description": "Actual code/example content"
          },
          "usage": {
            "type": "string",
            "minLength": 10,
            "maxLength": 1000,
            "description": "Instructions on how to use/implement the example"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1,
              "maxLength": 30
            },
            "minItems": 1,
            "maxItems": 15,
            "uniqueItems": true,
            "description": "Relevant tags for categorization"
          },
          "related_tools": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^[a-z0-9-]+$"
            },
            "description": "Related tool IDs"
          },
          "difficulty": {
            "type": "string",
            "enum": ["beginner", "intermediate", "advanced"],
            "description": "Difficulty level"
          },
          "last_updated": {
            "type": "string",
            "format": "date-time",
            "description": "Last update timestamp for this example"
          },
          "author": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100,
            "description": "Author/contributor name"
          },
          "license": {
            "type": "string",
            "description": "License information"
          }
        }
      }
    }
  }
}