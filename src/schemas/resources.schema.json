{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://awesome-devsecops.example.com/schemas/resources.schema.json",
  "title": "DevSecOps Learning Resources Schema",
  "description": "Schema for validating learning resources data",
  "type": "object",
  "required": ["$schema", "version", "last_updated", "resources"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Reference to this schema file"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of the data file"
    },
    "last_updated": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last update"
    },
    "resources": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title", "description", "type", "category", "difficulty", "cost", "url", "tags"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$",
            "description": "Unique identifier (lowercase, hyphens only)"
          },
          "title": {
            "type": "string",
            "minLength": 1,
            "maxLength": 200,
            "description": "Resource title"
          },
          "description": {
            "type": "string",
            "minLength": 10,
            "maxLength": 1000,
            "description": "Detailed description"
          },
          "type": {
            "type": "string",
            "enum": ["book", "course", "certification", "video", "podcast", "blog", "ctf", "lab"],
            "description": "Resource type"
          },
          "category": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "fundamentals",
                "sast",
                "dast",
                "sca",
                "container-security",
                "cloud-security",
                "iac-security",
                "threat-modeling",
                "compliance",
                "incident-response"
              ]
            },
            "minItems": 1,
            "uniqueItems": true,
            "description": "Resource categories"
          },
          "difficulty": {
            "type": "string",
            "enum": ["beginner", "intermediate", "advanced"],
            "description": "Difficulty level"
          },
          "cost": {
            "type": "string",
            "enum": ["free", "paid", "freemium"],
            "description": "Cost type"
          },
          "url": {
            "type": "string",
            "format": "uri",
            "description": "Resource URL"
          },
          "author": {
            "type": "string",
            "description": "Author/Creator name"
          },
          "publisher": {
            "type": "string",
            "description": "Publisher/Organization"
          },
          "duration": {
            "type": "string",
            "description": "Duration (e.g., '2 hours', '45 minutes', '3:30', 'self-paced')"
          },
          "rating": {
            "type": "number",
            "minimum": 0,
            "maximum": 5,
            "description": "Rating (0-5 scale)"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1,
              "maxLength": 30
            },
            "minItems": 1,
            "maxItems": 15,
            "uniqueItems": true,
            "description": "Topic tags"
          },
          "featured": {
            "type": "boolean",
            "description": "Featured resource flag"
          },
          "prerequisites": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Required prerequisites"
          },
          "related_resources": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Related resource IDs"
          }
        }
      }
    }
  }
}